<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Verification.SignUpDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <View
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/leaf2" />

            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/leaf3"
                android:elevation="30dp" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="-40dp"
                android:background="@drawable/ellipse" />

            <View
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_back_btn"
                android:elevation="50dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginHorizontal="30dp"
                android:layout_marginTop="230dp"
                android:orientation="vertical">


                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/profileSignUp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:background="@drawable/profile_temp_img"
                    android:elevation="7dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Full name"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/nameSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_input"
                    android:elevation="0.1dp"
                    android:ems="100"
                    android:hint="Enter your full name"
                    android:minHeight="48dp"
                    android:padding="20dp"
                    android:textColor="#111719"
                    android:textColorHint="#C4C4C4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Hostel"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <Spinner
                    android:id="@+id/hostelSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autofillHints="name"
                    android:background="@drawable/custom_input"
                    android:padding="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Role"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <Spinner
                    android:id="@+id/roleSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autofillHints="name"
                    android:background="@drawable/custom_input"
                    android:padding="23dp" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Room no"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <EditText
                    android:id="@+id/roomSignUp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10dp"
                    android:autofillHints=""
                    android:background="@drawable/custom_input"
                    android:elevation="0.1dp"
                    android:ems="100"
                    android:hint="Ex. (A-312) "
                    android:minHeight="48dp"
                    android:padding="20dp"
                    android:textColorHint="#C4C4C4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Branch"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <Spinner
                    android:id="@+id/branchSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:autofillHints="name"
                    android:background="@drawable/custom_input"
                    android:padding="23dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/sofia_pro_medium"
                    android:text="Gender"
                    android:textColor="@color/editTextColor"
                    android:textSize="19sp" />

                <RadioGroup
                    android:id="@+id/genderSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/custom_input"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Male"
                        android:paddingVertical="10dp"
                        android:background="@drawable/custom_input"
                        android:textColor="#111719"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:layout_weight="1"
                        android:textSize="17sp" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        android:text="Female"
                        android:fontFamily="@font/sofia_pro_medium"
                        android:textColor="#111719"
                        android:layout_weight="1"
                        android:textSize="17sp" />


                </RadioGroup>


                <Button
                    android:id="@+id/detailSignUpBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1000"
                    android:background="@drawable/circular_btn"
                    android:elevation="5dp"
                    android:fontFamily="@font/soifa_pro_semibold"
                    android:paddingHorizontal="100dp"
                    android:paddingVertical="15dp"
                    android:shadowColor="@color/white"
                    android:stateListAnimator="@null"
                    android:text="@string/sign_up"
                    android:textColor="@color/white"
                    android:textSize="16sp" />



            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>