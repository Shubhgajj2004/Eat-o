<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="20dp">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/catShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="7dp"
            android:paddingHorizontal="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹ "
                android:layout_weight="700"
                android:fontFamily="@font/sofia_pro_medium"
                android:textColor="@color/company_color"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/itemCatPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX"
                android:fontFamily="@font/sofia_pro_medium"
                android:layout_weight="700"
                android:textColor="@color/black"
                android:textSize="24sp" />
        </LinearLayout>


    </androidx.cardview.widget.CardView>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/itemCatImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="2dp"
            android:scaleType="centerCrop"
            android:background="@color/shimmerColor"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize10Percent" />




        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="20dp"
            android:elevation="3dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-20dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingVertical="9dp"
                android:paddingHorizontal="9dp">

                <TextView
                    android:id="@+id/nStarCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="X.Y"
                    android:textColor="#171717"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="★"
                    android:textColor="@color/company_color"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="("
                    android:textColor="#171717"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/nPeopleCat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="XX"
                    android:textColor="#171717"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:textColor="#171717"
                    android:textSize="15sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=")"
                    android:textColor="#171717"
                    android:textSize="15sp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>



        <TextView
            android:id="@+id/itemNameCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="YY"
            android:textColor="#000000"
            android:textFontWeight="500"
            android:textSize="20sp" />
      <TextView
          android:id="@+id/itemCatIngredient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/sofia_pro_medium"
            android:text="paneer, palak, gravy"
            android:textColor="#5B5B5E"
            android:textFontWeight="100"
            android:paddingBottom="10dp"
            android:textSize="16sp" />



    </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>



</androidx.cardview.widget.CardView>